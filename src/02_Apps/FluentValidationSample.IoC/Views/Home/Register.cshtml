@model FluentValidationSample.WebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm(MVC.Home.ActionNames.Register, MVC.Home.Name, FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new Dictionary<string, object>() { { "class", "col-xs-12 col-sm-2 col-md-2 col-lg-2 control-label" } })
        <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
            @Html.TextBoxFor(m => m.Email, new Dictionary<string, object>() { { "class", "form-control" }, { "placeholder", "Email" } })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new Dictionary<string, object>() { { "class", "col-xs-12 col-sm-2 col-md-2 col-lg-2 control-label" } })
        <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
            @Html.PasswordFor(m => m.Password, new Dictionary<string, object>() { { "class", "form-control" }, { "placeholder", "Password" } })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new Dictionary<string, object>() { { "class", "col-xs-12 col-sm-2 col-md-2 col-lg-2 control-label" } })
        <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new Dictionary<string, object>() { { "class", "form-control" }, { "placeholder", "Confirm Password" } })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12 col-sm-offset-2 col-sm-10 col-md-offset-2 col-md-10 col-lg-offset-2 col-lg-10">
            <input class="btn btn-primary" type="submit" name="Submit" />
        </div>
    </div>
}
